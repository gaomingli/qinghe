/* pages/psychometrics/psychometrics.wxss */
@import "../index/index.wxss";
.psychometrics{
  background-color: #F8F8F8;
}
.bg_main{
  margin-top:-300rpx;
width:94%;
margin-left:auto;
margin-right:auto;
}
.bg_main image,.bg_index image{
  width: 100%;
  height: 150px;
  border-radius:32rpx;
}
.bg_index{
  height: 440rpx;
  width: 100%
}
.index_menu{
  display: flex;
  padding: 40rpx 30rpx;
  background: #fff;
  justify-content: space-around;
}
.index_menu navigator image {
width:58rpx;
height: 50rpx
}
.menu_text{
  font-size:30rpx;
  color:#666666;
/* margin-top: 0rpx; */
text-align: center;
}
.common_boxs .hot_box .hot_right{
  width: auto;
}
.common_boxs .hot_box{
  width: auto;
  justify-content:flex-start;
  margin-right: 0rpx;
  border-bottom: 1px solid #E7E7E7;
  height: auto;
  padding: 46rpx 0rpx;
}
.common_boxs .hot_box image{
  width: 234rpx;
  margin-right: 44rpx;
}
.common_boxs .hot_box{
  box-shadow:none;
  border-radius:0
}
.common_boxt{
  margin:30rpx 0px 0px 0px;
}
.active .menu_text {
  color:#53b2aa;
}
.grantImage{
  width:130rpx;
  height:110rpx;
}


.title_left image{width: 8rpx;height: 33rpx;}
.title_left .txt{font-size: 32rpx;font-weight: bold;color: #333333;padding-left:16rpx;}
.common_box{
  margin-top: 10rpx;
  margin-bottom: 0rpx;
}
.common_content .scroll_box{display: flex;}
.hot_box{
  flex-shrink: 0;
  width: 421rpx;
  height: 193rpx;
  background:#ffffff;
  box-shadow:0px 2rpx 18rpx 0px rgba(159,159,159,0.2);
  border-radius:10rpx;
  padding: 21rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-right: 30rpx;
}
.hot_box image{width: 169rpx;height: 152rpx;flex-shrink: 0;}
.hot_box .hot_right{
  display: flex;flex-direction: column;justify-content: space-between;width: 190rpx;margin-left: 
  20rpx
 }
.hot_box .hot_title{
  font-size: 28rpx;color: #333333;line-height: 36rpx;
  overflow: hidden;text-overflow: ellipsis;white-space: nowrap;letter-spacing: 2rpx;
}
.hot_box .hot_num{font-size: 24rpx;color: #999999;line-height: 36rpx;}
.hot_box .hot_submit{
  width:143rpx;
  height:56rpx;
  background-color:#53B2AA;
  border-radius:28rpx;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 56rpx;
  text-align: center;
}