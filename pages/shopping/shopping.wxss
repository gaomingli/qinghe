/* pages/shopping/shopping.wxss */
@import "../index/index.wxss";

.user_info image {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
  border-radius: 50%;
}

.warning {
  text-align: center;
  margin-top:40rpx;
}

.warning image {
  width: 52rpx;
  height: 30rpx;
  vertical-align: middle;
}

.warning text {
  color: #333;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.change_goods {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  height: 328rpx
}

.change_goods image {
  width: 100%;
  height: 100%
}

.total_info {
  display: flex;
  justify-content: space-between;
  margin-left: 30rpx;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom:20rpx;
}

.total_info .user_info,
.total_info .right_info {
  margin: auto 22rpx;
}

.total_info .total_user {
  justify-content: space-between;
  display: flex;
}

.total_info .user_info .available {
  color: #333;
  font-size: 36rpx
}

.total_info .user_info .information,
.total_info .right_info .available {
  color: #999;
  font-size: 26rpx;
}

.total_info .right_info .information {
  color: #333;
  font-size: 50rpx;
  font-weight: bold
}

.box_title .prefecture {
  color: #333;
  font-size: 36rpx;
  text-align: center;
}

.box_title .recommend {
  color: #999;
  font-size: 26rpx;
  text-align: center;
}