 <!--搜索部分-->
  <view class="searchBox">
    <view class="searchBox_input">
          <image src='/icon/search.png'></image>
          <input placeholder='搜索社区动态' bindinput='getintsearch' bindconfirm="getSearch" type="text" confirm-type="search"></input>
    </view>      
  </view>

<!--5个内容切换部分-->
<view class="swiper-tab">
  <view wx:for="{{navTab}}" wx:key="*this" class="swiper-tab-list {{currentTab==index ? 'on_pdd' : ''}}" data-current="{{index}}" bindtap="switchNav">{{item}}</view>
</view>
<view class="c_t60"></view> 
 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}px" bindchange="bindChange">
  <!-- <swiper-item wx:for="{{navTab}}" wx:key="index">
    <scroll-view class="scrollWrap" scroll-y="true" style='height:{{winHeight}}px;'> 
    </scroll-view>
  </swiper-item> -->
  <swiper-item>111111111111</swiper-item>
  <swiper-item>22222222222222222</swiper-item>
  <!--动态-->
  <swiper-item>
     <scroll-view class="page" scroll-y="true" style='height:{{winHeight}}px;'>
      <!--列表-->
      <view class="circleList" wx:for='{{dataSource}}' wx:key='index' wx:for-index="index">
        <!--头像、昵称、内容-->
        <view class="body-view">
          <!--头像-->
          <view class="left-view">
            <image class="user-icon" src="{{item.avatar}}"></image>
          </view>
          <view class="right-view">
            <!--昵称-->
            <view class="user-name-view">
              <label class="user-name">{{item.user_nickname}}</label>
            </view>
            <!--内容-->
            <view class="user-content-view">
              <text class="user-content">{{item.post_content}}</text>
            </view>
            <!--图片-->
            <view class="photo-view">
              <view class="photo" wx:for='{{item.photos}}' style="width:{{photoWidth}}px;height:{{photoWidth}}px" wx:key="*this">
                 <image bindtap='LookPhoto' data-photUrl='{{item}}' src='{{item.url}}' style='width:{{photoWidth}}px;height:{{photoWidth}}px'></image>
              </view>
             
            </view>
            <!--时间、删除按钮、点赞评论按钮-->
            <view class="TDD-view">
              <label>4天前</label>
              <!-- <button bindtap='delete'>删除</button> -->
              <image data-isShow='{{isShow}}' bindtap='TouchDiscuss' src='../../icon/circle1/comment.png'></image>
               <!-- 评论按钮弹出框 -->
              <!-- <view animation="{{animation}}" class='pop-up-box' style='top:{{popTop}}px;width: {{popWidth}}px;'></view> -->
               <view animation="{{animation}}" class='pop-up-box' style='width: {{popWidth}}px;'></view>
            </view>

            <!-- 评论 -->
            <view class='discuss-view'>
              <view class='discuss' wx:for='{{item.comment}}' wx:key='index' wx:for-index="index">
                <label bindtap='TouchZanUser' data-name='{{item.user_nickname}}' class='discuss-user'>{{item.user_nickname}}：</label>
                <label class='content'>{{item.content}}</label>
              </view>
            </view>

          </view>
        </view>
      </view>
     </scroll-view>
    
  </swiper-item>
  <!--动态end-->
  
  <swiper-item>444444444444444</swiper-item>
  <swiper-item>5555555555555555555555</swiper-item>
</swiper>

