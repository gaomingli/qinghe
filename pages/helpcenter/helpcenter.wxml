<!--pages/helpcenter/helpcenter.wxml-->
<view class='helpcenter'>
<view class="caption-wrap">
    <i-collapse name="{{name}}">
        <i-collapse-item title="为什么登录不成功？" name="name1">
            <view slot="content" i-class-content="green-text">
                请尝试找回密码然后再登录，或尝试用其他登录方式
            </view>
        </i-collapse-item>
    </i-collapse>
    <i-collapse name="{{name}}">
        <i-collapse-item title="为什么参加活动没有获得积分？" name="name2">
            <view slot="content" i-class-content="green-text">
               请尝试
            </view>
        </i-collapse-item>
    </i-collapse>
</view>
</view>
