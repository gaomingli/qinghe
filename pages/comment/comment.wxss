/* pages/comment/comment.wxss */
.comment{
  padding: 30rpx;
  }
  .record{
    display:flex;
  justify-content:flex-start;
  padding: 27rpx 0rpx;
  }
  .record .photo{
    width: 75rpx;
    height: 75rpx;
  }
  .record .photo image,.review image{
    width: 100%;
    height: 100%;
  }
  .record .detail{
    display:flex;
  justify-content:space-between;
  margin-left: 16rpx;
  border-bottom: 1rpx solid #E7E7E7;
  padding-bottom: 35rpx;
  }
  .review{
    width: 113rpx;
    height: 113rpx;
  }
  .title,.return text{
    color: #384463;
    font-size: 24rpx;
  }
  .return{
  color: #333333;
    font-size: 24rpx;
    margin-top: 16rpx;
  }
  .time{
    color: #999999;
    font-size: 20rpx;
    margin-top: 16rpx;
  }